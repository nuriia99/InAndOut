@model IEnumerable<InAndOut.Models.Item>


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Borrowed Items List</h2>
		</div>
		<div class="col-6">
			<a class="btn btn-primary" asp-controller="Item" asp-action="Create">Create new item</a>
		</div>
	</div>
	<br/>

	@if(Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" stype="width:100%">
			<thead>
				<tr>
					<th>Item name</th>
					<th>Borrower</th>
					<th>Lender</th>
				</tr>
			</thead>
			<tbody>
				@foreach(Item item in Model)
				{
					<tr>
						<td widht="30%">@item.ItemName</td>
						<td widht="30%">@item.Borrower</td>
						<td widht="30%">@item.Lender</td>
					</tr>
				}
			</tbody>
		</table>
	} else
	{
		<p>No items created yet.</p>
	}
</div>
