@model InAndOut.Models.Expense

<form method="post" asp-action="DeletePost">
	<input asp-for="Id" hidden />
	<div class="border p-3">
		<div class="form-group row">
			<h2 class="text-black-50 pl-3">Delete Item</h2>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="form-group row mb-3">
					<div class="col-4">
						<label asp-for="Name">Expense</label>
					</div>
					<div class="col-4">
						<label asp-for="Amount"></label>
					</div>
				</div>
				<div class="form-group row mb-3">
					<div class="col-4">
						<input asp-for="Name" class="form-control" />
					</div>
					<div class="col-4">
						<input asp-for="Amount" class="form-control" />
					</div>
				</div>
				<div class="form-group row mb-3">
					<div class="col-8 offset-2 row">
						<div class="col">
							<input type="submit" class="btn btn-danger w-75" value="Delete" />
						</div>
						<div class="col">
							<a class="btn btn-success w-75" asp-action="Index">Go back</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>